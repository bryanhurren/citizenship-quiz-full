{
  "buildCommand": "bash build.sh",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "functions": {
    "api/stripe-webhook.js": {
      "maxDuration": 10,
      "memory": 1024,
      "includeFiles": "api/stripe-webhook.js"
    },
    "api/cancel-subscription.js": {
      "maxDuration": 10,
      "memory": 1024,
      "includeFiles": "api/cancel-subscription.js"
    },
    "api/delete-account.js": {
      "maxDuration": 10,
      "memory": 1024,
      "includeFiles": "api/delete-account.js"
    }
  },
  "crons": [
    {
      "path": "/api/generate-daily-report?secret=temp-fix-2025",
      "schedule": "0 8 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}
